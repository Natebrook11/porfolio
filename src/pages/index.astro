<script>
    window.addEventListener("load", function () {
        const time = document.querySelector<HTMLElement>(".time");
        let lastMinute: number = -1; // Initialize lastMinute to an invalid value

        function displaySpainTime() {
            // Get current time in the user's local timezone
            const localTime = new Date();

            // Extract current minute
            const currentMinute = localTime.getMinutes();

            // Update time only if minute changes
            if (currentMinute !== lastMinute) {
                lastMinute = currentMinute;

                // Convert local time to Spain timezone
                const spainTime = localTime.toLocaleString("en-US", {
                    timeZone: "Europe/Madrid",
                    hour12: true,
                    hour: "2-digit",
                    minute: "2-digit",
                });

                console.log(`${spainTime}`);
                if (time) {
                    time.innerHTML = "ðŸ•›" + spainTime;
                }
            }
        }

        // Call the function to display the current time in Spain
        setInterval(displaySpainTime, 1000); // Check every second for minute change
        displaySpainTime(); // Display time immediately
    });
</script>

