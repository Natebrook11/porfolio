<style>
    /* <------------- Hero -------------> */
    .hero {
        width: 100%;
        overflow: hidden;
        background: url("/background.jpg");
        height: 100dvh;
        background-attachment: fixed;
        display: flex;
        justify-content: center;
        align-items: center;
        background-size: cover;
        position: relative;
    }

    .hero h1 {
        color: #fff;
        font-family: "Inter";
        font-size: 10vw;
        text-wrap: nowrap;
    }

    .hero .marquee {
        --marquee-width: 100vw;
        --offset: 0vw;
        --move-initial: calc(-25% + var(--offset));
        --move-final: calc(-50% + var(--offset));
        width: var(--marquee-width);
        overflow: hidden;
        pointer-events: none;
        position: relative;

        animation: appearbottom 2s;
        animation-delay: 2s;
    }

    .hero .marquee__inner {
        width: fit-content;
        display: flex;
        position: relative;
        transform: translate3d(var(--move-initial), 0, 0);
        animation: marquee 10s linear infinite;
        gap: 2vw;
        animation-play-state: running;
    }

    .hero .marquee {
        text-align: center;
        text-transform: uppercase;
        font-weight: 900;
    }

    @keyframes marquee {
        0% {
            transform: translate3d(var(--move-initial), 0, 0);
        }

        100% {
            transform: translate3d(var(--move-final), 0, 0);
        }
    }

