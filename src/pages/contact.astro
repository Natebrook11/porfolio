---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact — Nate Brook.">
    <section class="hero">
        <div
            style="
        position: absolute;
        top: 50%;
        left: 0;
        transform: translate(0 , -50%)
        "
            class="marquee"
        >
            <div class="marquee__inner">
                <h1>— Make it real</h1>
                <h1>— Make it real</h1>
                <h1>— Make it real</h1>
                <h1>— Make it real</h1>
            </div>
        </div>
    </section>
    <section class="form">
        <form name="contact" method="POST" data-netlify="true">
            <div class="input-container">
                <h3><span>01</span>What's your name?</h3>
                <div class="form-control">
                    <input type="text" name="Name" placeholder="Nathan Brook" required="true" />
                </div>
            </div>
            <div class="input-container">
                <h3><span>02</span>What's your email?</h3>
                <div class="form-control">
                    <input type="text"  name="email" placeholder="natebrook@gmail.com" required="true" />
                </div>
            </div>
            <div class="input-container">
                <h3><span>03</span>What's the name of your organization?</h3>
                <div class="form-control">
                    <input type="text"  name="Organization" placeholder="Nate Brook" required="true" />
                </div>
            </div>
            <div class="input-container">
                <h3><span>04</span>What services are you looking for?</h3>
                <div class="form-control">
                    <input type="text"  name="Looking for" placeholder="Desing , Development ..." required="true" />
                </div>
            </div>
            <div class="input-container">
                <h3><span>05</span>Your message</h3>
                <div class="form-control">
                    <input type="text" name="Description" placeholder="Description of the project" required="true" />
                </div>
            </div>
            <input class="submit" type="submit" value="Submit">
        </form>
    </section>
</Layout>

<style>
    .hero {
        height: 60dvh;
        position: relative;
    }

    .hero h1 {
        color: var(--text);
        font-family: "Inter";
        font-size: 10vw;
        text-wrap: nowrap;
    }
    .hero .marquee {
        --marquee-width: 100vw;
        --offset: 0vw;
        --move-initial: calc(-25% + var(--offset));
        --move-final: calc(-50% + var(--offset));
        width: var(--marquee-width);
        overflow: hidden;
        pointer-events: none;
        position: relative;

        animation: appearbottom 2s;
        animation-delay: 2s;
    }

    .hero .marquee__inner {
        width: fit-content;
        display: flex;
        position: relative;
        transform: translate3d(var(--move-initial), 0, 0);
        animation: marquee 10s linear infinite;
        gap: 2vw;
        animation-play-state: running;
    }

    .hero .marquee {
        text-align: center;
        text-transform: uppercase;
        font-weight: 900;
    }

    @keyframes marquee {
        0% {
            transform: translate3d(var(--move-initial), 0, 0);
        }

        100% {
            transform: translate3d(var(--move-final), 0, 0);
        }
    }

    form {
        width: 90%;
        margin-bottom: 10dvh;
        margin-left: auto;
        margin-right: auto;
        display: grid;
        place-content: center;
    }

    .input-container h3 span{
        font-size: 13px;
        margin-right: 20px;
    }

    .form-control {
        position: relative;
        margin: 20px 0 40px;
        width: 95%;
        max-width: 600px;
    }

    

    .form-control input {
        background-color: transparent;
        border: 0;
        border-bottom: 2px var(--secondary) solid;
        display: block;
        width: 100%;
        padding: 15px 0;
        font-size: 18px;
        color: var(--secondary);
    }

    .form-control input:focus,
    .form-control input:valid {
        outline: 0;
        border-bottom-color: var(--aux2);
    }

    .submit{
        width: 150px;
        border-radius: 50px;
        height: 40px;
        margin: auto;
        background-color: var(--aux);
        display: grid;
        place-items: center;
        font-weight: 700;
        border-radius: 50px;
        transition: all ease 0.2s;
        cursor: pointer;
    }

    .submit:hover{
        background-color: var(--aux2);
        color: var(--text2);
    }
</style>
