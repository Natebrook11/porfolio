<script>
    function handleToggleChange() {
        const toggleInput = document.querySelector(".toggle-input");
        const body = document.body;

        // Check if user has a preference stored in local storage
        const darkModePreference = localStorage.getItem("darkModePreference");

        // If user has a preference saved, use it
        if (darkModePreference === "dark") {
            body.classList.add("darkmode");
            if (toggleInput) {
                toggleInput.checked = true;
            }
        }

        // Listen for changes in toggle input
        if (toggleInput) {
            toggleInput.addEventListener("change", (event) => {
                // If the toggle is checked, enable dark mode
                if ((event.target as HTMLInputElement).checked) {
                    body.classList.add("darkmode");
                    localStorage.setItem("darkModePreference", "dark");
                } else {
                    // Otherwise, disable dark mode
                    body.classList.remove("darkmode");
                    localStorage.removeItem("darkModePreference");
                }
            });
        }
    }

    // Call the function to start listening for changes
    handleToggleChange();
</script>

