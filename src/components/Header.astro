<style>
    /* <------------- Header -------------> */
    header {
        width: 100%;
        left: 50%;
        transform: translate(-50%, 0%);
        position: fixed;
        top: 0;
        align-items: center;
        display: flex;
        justify-content: space-between;
        color: var(--text);
        height: 10dvh;

        z-index: 2;
    }

    /* <------------- Logo -------------> */

    .logo {
        color: var(--text);
        transition: all ease-in-out 0.2s;
        margin-left: 2dvh;
    }

    .logo:hover {
        scale: 1.1;
        color: var(--aux) !important;
    }

    /* <------------- Nav -------------> */

    nav {
        position: absolute;
        top: 2dvh;
        right: 2dvh;
    }

    @media screen and (max-width: 1000px) {
        nav {
            position: absolute;
            top: 2dvh;
            right: -2dvh;
        }
    }

    /* <------------- Nav - Button -------------> */

    nav .input:checked + ul {
        width: 40dvh;
        height: 60dvh;
        transition-delay: 0s;

        box-shadow: #ffd60a -20px 20px 0px;
    }

    nav .input:checked + ul li {
        transform: translateX(0px);
    }

    nav .input:checked + ul li:nth-child(4) {
        transition-delay: 0.2s;
    }
    nav .input:checked + ul li:nth-child(3) {
        transition-delay: 0.3s;
    }
    nav .input:checked + ul li:nth-child(2) {
        transition-delay: 0.4s;
    }
    nav .input:checked + ul li:nth-child(1) {
        transition-delay: 0.5s;
    }

    nav .input {
        position: absolute;
        top: 0px;
        right: 20px;
        width: 150px;
        border-radius: 50px;
        height: 40px;
        overflow: hidden;
    }

    nav .input:before {
        width: 100%;
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        content: "Menu";
        background-color: var(--aux);
        display: grid;
        place-items: center;
        font-weight: 700;
        border-radius: 50px;
        transition: all ease 0.2s;
        cursor: pointer;
    }

    nav .input:hover::before {
        background-color: var(--aux2);
        color: var(--text2);
    }

    /* <------------- Menu -------------> */

    ul {
        list-style: none;
        gap: 40px;
        transition: all ease-in-out 0.4s;
        height: 0;
        width: 0;
        overflow: hidden;
        background-color: var(--primary);
        color: var(--text);
        margin-top: 20px;
        margin-right: 40px;
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        transition-delay: 0.25s;
        padding-bottom: 20px;
        box-shadow: none;
    }

    li {
        text-align: right;
        display: flex;
        flex-direction: column;
        gap: 0;
        padding-right: 20px;
        overflow: hidden;
        height: 50px;
        transform: translateX(120%);
        transition: all ease-in-out 0.4s;
        padding-top: 20px;
        transition-delay: 0s;
    }
    li a {
        font-size: clamp(10px, 17vw, 50px);
        text-transform: uppercase;
        font-weight: 600;
        line-height: 0.1;
        transform: translateY(0%);
        transition: all ease-in-out 0.3s;
    }

    li a:nth-child(2) {
        transform: translateY(50px);
        color: red;
        line-height: 0.1;
    }

    li:hover a:nth-child(1) {
        transform: translateY(-50px);
    }

    li:hover a:nth-child(2) {
        transform: translateY(0%);
    }

    .toggle-container {
        --active-color: var(--aux);
        --inactive-color: var(--secondary);
        position: absolute;
        top: 2.5dvh;
        right: 20dvh;
        aspect-ratio: 292 / 142;
        height: 1.875em;
        z-index: 9999;
    }

    .toggle-input {
        appearance: none;
        margin: 0;
        position: absolute;
        z-index: 1;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        cursor: pointer;
    }

    .toggle {
        width: 100%;
        height: 100%;
        overflow: visible;
    }

    .toggle-background {
        fill: var(--inactive-color);
        transition: fill 0.4s;
    }

    .toggle-input:checked + .toggle .toggle-background {
        fill: var(--active-color);
    }

    .toggle-circle-center {
        transform-origin: center;
        transition: transform 0.6s;
    }

    .toggle-input:checked + .toggle .toggle-circle-center {
        transform: translateX(150px);
    }

    .toggle-circle {
        transform-origin: center;
        transition: transform 0.45s;
        backface-visibility: hidden;
    }

    .toggle-circle.left {
        transform: scale(1);
    }

    .toggle-input:checked + .toggle .toggle-circle.left {
        transform: scale(0);
    }

    .toggle-circle.right {
        transform: scale(0);
    }

    .toggle-input:checked + .toggle .toggle-circle.right {
        transform: scale(1);
    }

    .toggle-icon {
        transition: fill 0.4s;
    }

    .toggle-icon.on {
        fill: var(--inactive-color);
    }

    .toggle-input:checked + .toggle .toggle-icon.on {
        fill: #fff;
    }

    .toggle-icon.off {
        fill: #eaeaec;
    }

    .toggle-input:checked + .toggle .toggle-icon.off {
        fill: var(--active-color);
    }
</style>
